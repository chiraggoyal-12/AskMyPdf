<%- include('partials/header') %>

<h1 class="mb-4">Upload Your PDF</h1>

<% if (messages.error.length) { %>
  <div class="alert alert-danger"><%= messages.error[0] %></div>
<% } %>

<% if (messages.success.length) { %>
  <div class="alert alert-success"><%= messages.success[0] %></div>
<% } %>


<form action="/upload" method="POST" enctype="multipart/form-data" class="border p-4 shadow rounded">
  <div class="mb-3">
    <label for="pdf" class="form-label">Choose PDF File</label>
    <input class="form-control" type="file" name="pdf" id="pdf" required />
  </div>
  <button type="submit" class="btn btn-primary">Upload & Process</button>
</form>

  <%- include('partials/footer') %>

